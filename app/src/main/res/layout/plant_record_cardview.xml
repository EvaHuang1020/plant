<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="411dp"
        android:layout_height="81dp"
        android:layout_margin="3dp"
        android:background="@color/black"
        app:cardElevation="5dp"
        app:contentPadding="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="時間"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.20999998" />

            <TextView
                android:id="@+id/textView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="土壤濕度"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView01"
                app:layout_constraintStart_toStartOf="@+id/textView01"
                app:layout_constraintTop_toBottomOf="@+id/textView01" />

            <TextView
                android:id="@+id/textView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="氣溫"
                app:layout_constraintBottom_toBottomOf="@+id/item_time"
                app:layout_constraintStart_toEndOf="@+id/item_time"
                app:layout_constraintTop_toTopOf="@+id/item_time" />

            <TextView
                android:id="@+id/textView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空氣濕度"
                app:layout_constraintEnd_toEndOf="@+id/textView03"
                app:layout_constraintStart_toStartOf="@+id/textView03"
                app:layout_constraintTop_toTopOf="@+id/item_sw" />

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/textView01"
                app:layout_constraintStart_toEndOf="@+id/textView01"
                app:layout_constraintTop_toTopOf="@+id/textView01"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/item_sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/item_time"
                app:layout_constraintStart_toStartOf="@+id/item_time"
                app:layout_constraintTop_toTopOf="@+id/textView02" />

            <TextView
                android:id="@+id/item_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/textView03"
                app:layout_constraintStart_toEndOf="@+id/textView03"
                app:layout_constraintTop_toTopOf="@+id/textView03" />

            <TextView
                android:id="@+id/item_aw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/item_at"
                app:layout_constraintStart_toStartOf="@+id/item_at"
                app:layout_constraintTop_toTopOf="@+id/textView04" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>